{
  "name": "Imba-WebExt",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:chrome": "BROWSER=chrome vite",
    "dev:firefox": "BROWSER=firefox vite",
    "build": "vite build",
    "build:chrome": "BROWSER=chrome vite build",
    "build:firefox": "BROWSER=firefox vite build",
    "preview": "vite preview",
    "prod": "npm run prod:chrome && npm run prod:firefox",
    "prod:chrome": "BROWSER=chrome vite build && node scripts/zip.js --browser=chrome",
    "prod:firefox": "BROWSER=firefox vite build && node scripts/zip.js --browser=firefox",
    "zip:chrome": "node scripts/zip.js --browser=chrome",
    "zip:firefox": "node scripts/zip.js --browser=firefox",
    "test": "bun run scripts/build-tests.js && bun test test.local",
    "test:watch": "bun run scripts/watch-tests.js && bun test test.local"
  },
  "dependencies": {
    "turndown": "^7.1.2",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "archiver": "^7.0.1",
    "imba": "^2.0.0-alpha.247",
    "vite": "^7.2.0",
    "vite-plugin-imba": "^0.10.2"
  }
}